server {
        # listen 80 default_server;
        # listen [::]:80 default_server;

        # SSL configuration
        listen 443 ssl default_server; # ipv6only=on
        listen [::]:443 ssl default_server;

	ssl_certificate /etc/nginx/ssl/certs/demo.pem;
    	ssl_certificate_key /etc/nginx/ssl/private/demo-key.pem;

        server_name <capstone-domain>.com;

        location / {
                proxy_pass http://localhost:4200;
                proxy_redirect off;
                proxy_set_header   Host             $host;
                proxy_set_header   X-Real-IP        $remote_addr;
                #try_files http://localhost:4200;
        }

        location /api {
                proxy_pass http://localhost:8080;
                proxy_redirect off;
                proxy_set_header Host  $host;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

